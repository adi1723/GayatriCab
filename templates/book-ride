  flatpickr("#date", {
    dateFormat: "Y-m-d",
    minDate: "today", // disable past dates
    enable: [
      function(date) {
        // enable only Saturdays (6) and Sundays (0)
        return (date.getDay() === 6 || date.getDay() === 0);
      }
    ],
    "locale": {
      "firstDayOfWeek": 1 // optional: start week on Monday
    }
  });
</script>




